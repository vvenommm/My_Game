			}else {
				c.reaction2();
				Hoos_Burgers.payFail(p, c, f);
			}
		}else if(input == 1846971) {
			System.out.println("[SYSTEM] ì¬ë£Œë¹„ë¡œ " + f.cost + "ì›ì„ ì¼ìŠµë‹ˆë‹¤.");
			Foods.veg();
			if(code == 1846971) {
				c.reaction1();
				Hoos_Burgers.pay(p, c, f);
			}else {
				c.reaction2();
				Hoos_Burgers.payFail(p, c, f);
			}
		}else if(input == 1) {
			System.out.println("[SYSTEM] ì¬ë£Œë¹„ë¡œ " + f.cost + "ì›ì„ ì¼ìŠµë‹ˆë‹¤.");
			Foods.drink();
			if(code == 1) {
				c.reaction1();
				Hoos_Burgers.pay(p, c, f);
			}else {
				c.reaction2();
				Hoos_Burgers.payFail(p, c, f);
			}
		}else if(input == 2) {
			System.out.println("[SYSTEM] ì¬ë£Œë¹„ë¡œ " + f.cost + "ì›ì„ ì¼ìŠµë‹ˆë‹¤.");
			Foods.hotC();
