		//ì¡°ë¦¬í•˜ê¸° - ì´ëª¨í‹°ì½˜ ì¶œë ¥
		void cooking(int input, int code, Player p, Customer c, Foods food) {
			if(input == 16257891) {
				Foods.ham();
				if(code == 16257891) {
					c.reaction1();
					while(100 <= this.exp) {
						levelUP();
						this.exp -= 100;
					}
				}else {
					c.reaction2();
					Hoos_Burgers.payFail(p, c, food);
					while(100 <= this.exp) {
						levelUP();
						this.exp -= 100;
					}
				}
			}else if(input == 16853791) {
				Foods.chick();
				if(code == 16853791) {
					c.reaction1();
					Hoos_Burgers.pay(p, c, food);
				}else {
					c.reaction2();
					Hoos_Burgers.payFail(p, c, food);
				}
			}else if(input == 15625791) {
				Foods.chee();
				if(code == 15625791) {
					c.reaction1();
					Hoos_Burgers.pay(p, c, food);
				}else {
					c.reaction2();
					Hoos_Burgers.payFail(p, c, food);
				}
			}else if(input == 1846971) {
				Foods.veg();
				if(code == 1846971) {
					c.reaction1();
					Hoos_Burgers.pay(p, c, food);
				}else {
					c.reaction2();
					Hoos_Burgers.payFail(p, c, food);
				}
			}else if(input == 1) {
				Foods.drink();
				if(code == 1) {
					c.reaction1();
					Hoos_Burgers.pay(p, c, food);
				}else {
					c.reaction2();
					Hoos_Burgers.payFail(p, c, food);
				}
			}else if(input == 2) {
				Foods.hotC();
				if(code == 2) {
					c.reaction1();
					Hoos_Burgers.pay(p, c, food);
				}else {
					c.reaction2();
					Hoos_Burgers.payFail(p, c, food);
				}
			}else if(input == 3) {
				Foods.iceC();
				if(code == 3) {
					c.reaction1();
					Hoos_Burgers.payFail(p, c, food);
				}else {
					c.reaction2();
					Hoos_Burgers.payFail(p, c, food);
				}
			}else {
				Foods.WrongOrder();
				c.reaction3();
				Hoos_Burgers.payFail(p, c, food);
			}
		}
	
	//ê²½í—˜ì¹˜ ë³€ê²½
	void getEXP(){
		while(100 <= this.exp) {
			this.exp -= 100;
			levelUP();
		}	
	}	
	
	
	
	//ë ˆë²¨ ì—…
		void levelUP() {
			level++;
			money += 500000;
			System.out.println("â—†â—‡â—† LEVEL UP â—‡â—†â—‡");
			System.out.println("ï¼¼ğŸ˜†ã¸ã€€ ã¸ğŸ˜ãƒ˜ã€€ ãğŸ˜/ ");
			System.out.println("ãƒ˜ / ã€€ã€€ã€€ ( ãƒ˜ã€€ã€€ ã€€( ãƒ˜ ");
			System.out.println("ã€€ >ã€€ ã€€ <ã€€ã€€ã€€ã€€ã");
		}
		
		
