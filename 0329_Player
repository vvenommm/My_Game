	void getPaid(Customer c, Foods recipe) {
		System.out.println(recipe.name + "ì„ íšë“í•˜ì˜€ìŠµë‹ˆë‹¤.\nì´ì œ " + recipe.name + "ì„/ë¥¼ ë©”ë‰´ì— ì¶”ê°€í•  ìˆ˜ ìˆìŠµë‹ˆë‹¤. ");
		for(int i = 0; i < recipes.length; i++) {
			if(recipes[i] == null) {
				recipes[i] = recipe;
				break;
			}
		}		
	}
	
	
	
