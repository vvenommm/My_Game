package f_game;

public class Player {

	String name; //이름
	int exp; //경험치
	int money;
	int level; //레벨
	Foods[] foods; //보유 음식 레시피
	
	//초기화
	Player(String name){
		this.name = name;
		this.exp = 0;
		this.money = 100000;
		this.level = 1;
		this.foods = new Foods[5];
	}
	
	
	//플레이어 정보
	void showStatus() {
		System.out.println("============================");
		System.out.println("============상   태============");
		System.out.println("이름 : " + name);
		System.out.println("레벨 : " + level + "(" + exp + "/100)");
		System.out.println("재산 : " + money);
		System.out.println("----------보유 레시피-----------");
		for(int i = 0; i < foods.length; i++) {
			if(foods[i] != null) {
				foods[i].showMenuInfo();
			}
		}
		System.out.println("============================");
	}
	
	//서빙하기
	void servRight(Customer c, Foods food) {
		
	}
	
	
	void servFail(Customer c, Foods food) {
		
	}
	
	
	//레시피 얻기
	void getRecipe(Customer c, Foods food) {
		System.out.println(c + "이/가 팁으로" + food + "를/을 주었습니다.");
		System.out.println(food.exp + "의 경험치를 획득하였습니다.");
		this.exp += food.exp;
		this.money += food.price;
		while(100 <= this.exp) {
			levelUP();
			this.exp -= 100;
		}
		for(int i = 0; i < foods.length; i++) {
			if(foods[i] == null) {
				foods[i] = food;
				break; //한 번 추가햇으면 빠져나와야 함
			}
		}
		System.out.println(this.name + "은/는 이제 " + food + "를/을 요리할 수 있습니다.");
	}
	
	
	//레벨 업
	void levelUP() {
		level++;
		money += 500000;
		System.out.println("◆◇◆ LEVEL UP ◇◆◇");
		System.out.println("＼😆へ　 へ😁ヘ　 く😎/ ");
		System.out.println("ヘ / 　　　 ( ヘ　　 　( ヘ ");
		System.out.println("　 >　 　 <　　　　く");
	}
	
	
	

	
}
