	public static void WrongOrder() {
		System.out.println(" @  @@    @ ");
		System.out.println(" __ __   _____ ");
		System.out.println("(  @    ())   )");
		System.out.println(" /()// (())/// ");
		System.out.println("(_  __  __ ___)");
		System.out.println(" ● ●○     ○ ");
		System.out.println(" )) ))) ))) )) ");
		System.out.println(" ∞     ∞  ∞    ");
	}
	
