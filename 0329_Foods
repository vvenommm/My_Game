	//버거 임티
	void Hamburger() {
		System.out.println(" ___________ ");
		System.out.println("(           )");
		System.out.println(" /////////// ");
		System.out.println(" @ @ @ @ @ @ ");
		System.out.println(" ▒▒▒▒▒▒▒▒▒▒▒");
		System.out.println(" ∞  ∞  ∞  ∞ ");
		System.out.println("(___________)");
	}
	
	
	public void ChickB() {
		System.out.println(" ___________ ");
		System.out.println("(           )");
		System.out.println(" /////////// ");
		System.out.println(" ∞  ∞  ∞  ∞ ");
		System.out.println(" ≡≡≡≡≡≡≡≡≡≡≡ ");
		System.out.println(" ☆★☆★☆★☆★☆★ ");
		System.out.println("(___________)");
	}
	
	
	public void CheeseB() {
		System.out.println(" ___________ ");
		System.out.println("(           )");
		System.out.println(" ☆★☆★☆★☆★ ");
		System.out.println(" /////////// ");
		System.out.println(" ≡≡≡≡≡≡≡≡≡≡≡ ");
		System.out.println(" ∞  ∞  ∞  ∞ ");
		System.out.println(" ▒▒▒▒▒▒▒▒▒▒▒");
		System.out.println("(___________)");
	}
	
	
	public void VeggieB() {
		System.out.println(" ___________ ");
		System.out.println("(           )");
		System.out.println(" ☆★☆★☆★☆★ ");
		System.out.println(" /////////// ");
		System.out.println(" ≡≡≡≡≡≡≡≡≡≡≡ ");
		System.out.println(" ∞  ∞  ∞  ∞ ");
		System.out.println(" ▒▒▒▒▒▒▒▒▒▒▒");
		System.out.println("(___________)");
	}
	
	
	public void Coke() {
		System.out.println("        // ");
		System.out.println("       //  ");
		System.out.println("      //   ");
		System.out.println(" ____//____");
		System.out.println("│     ∪  ˘      │");
		System.out.println("│          │");
		System.out.println("│          │");
		System.out.println("│  ∪                           │");
		System.out.println("│          │");
		System.out.println("│                         ∪    │");
		System.out.println("│          │");
		System.out.println("└──────────┘");
	}
	
	
	
	
	
	
	
	
}





//메뉴 클래스들 (자식 클래스)

class Hamburger extends Foods{
	Hamburger(){
		super("햄버거", 4500, 300);
	}
}

class ChickB extends Foods{
	ChickB(){
		super("치킨버거", 5500, 530);
	}
}

class CheeseB extends Foods{
	CheeseB(){
		super("치즈버거", 5000, 460);
	}
}

class VeggieB extends Foods{
	VeggieB(){
		super("비건버거", 6000, 700);
	}
}

class Coke extends Foods{
	Coke(){
		super("콜라", 2000, 70);
	}
}





