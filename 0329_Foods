package f_game;

public class Foods { //부모 클래스
	
	String name; //만들 수 있는 음식 이름
	int price; //가격
	int exp; //경험치
	int cost; //재료비
	
	
	Foods(String name, int price, int exp){
		this.name = name;
		this.price = price;
		this.exp = exp;
	}
	
	

	
	public void showMenuInfo() {
		String info = name + "\n";
		info += price + "원";
		info += "\n경험치 :" + exp;
		info += "\n재료비 : " + cost + "원";
		
		System.out.println(info);
	}
	
	
	
	
	
	
	
	
	
